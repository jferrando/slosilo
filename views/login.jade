extends layout
block content
	.container
		.row-fluid
			.page-header
				h1 Login
			include partials/messages
			div!=locals.useCaptcha || ''
			form.form-horizontal(action='/login', method='post')
				fieldset
					.control-group
						label.control-label(for='email') Email
						.controls
							input.input-xlarge(type='text', name='email')
					.control-group
						label.control-label(for='password') Password
						.controls
							input.input-xlarge(type='password', name='password')
							p.help-block
								a(href="/recover") Forgot your password?
					.form-actions
						input.btn.btn-primary(type='submit', value="Login") 
